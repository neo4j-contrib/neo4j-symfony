{
    "name": "neo4j/neo4j-bundle",
    "description": "Symfony integration for Neo4j",
    "type": "symfony-bundle",
    "keywords": ["neo4j"],
    "license": "MIT",
    "authors": [
        {
            "name": "Tobias Nyholm",
            "email": "tobias.nyholm@gmail.com"
        },
        {
            "name": "Xavier Coureau",
            "email": "xavier@pandawan-technology.com"
        }
    ],
    "require": {
        "php": "^7.0",
        "graphaware/neo4j-php-client": "^4.6.4",
        "symfony/framework-bundle": "^2.7 || ^3.0 || ^4.0",
        "graphaware/neo4j-bolt": "^1.6"
    },
    "require-dev": {
        "symfony/phpunit-bridge": "^3.3 || ^4.0",
        "matthiasnoback/symfony-dependency-injection-test": "^1.1 || ^2.3"
    },
    "suggest": {
        "graphaware/neo4j-php-ogm": "To have EntityManager support"
    },
    "autoload": {
        "psr-4": {
            "Neo4j\\Neo4jBundle\\": ""
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-ci": "vendor/bin/phpunit --coverage-text --coverage-clover=build/coverage.xml"
    }
}
